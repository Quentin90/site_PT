                            <small class="error">{{erreurs.date_fin_emploi}}</small>
                        {% endif %}
                    </label>
                    <label>description
                        <input name="description_emploi"  type="text"  size="18"  value="{{donnees.description_emploi|default("")}}"/>
                        {% if erreurs.description_emploi is defined %}
                            <small class="error">{{erreurs.description_emploi}}</small>
                        {% endif %}
                    </label>

